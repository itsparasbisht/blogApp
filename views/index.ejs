<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>

    <%- include('./partials/nav.ejs') %> 

    <h2 class="title">all blogs</h2>

    <% if(blogs.length > 0){ %> 
        <% blogs.forEach(item => { %>
            <a href="/blogs/<%= item._id %>" class="blogs">
                <h1><%= item.title %> </h1>
                <p><%= item.body.slice(0,150) %>... </p>
            </a>
        <% }) %> 
    <% } else {%>
        <h2 class="message">no blog to display :(</h2>
    <% } %> 

    <%- include('./partials/footer.ejs') %> 

</body>
</html>